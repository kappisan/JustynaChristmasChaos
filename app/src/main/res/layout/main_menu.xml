<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_splash_screen"
    android:orientation="vertical" >

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:text="PLAY"
        android:textColor="#ffffff"
        android:background="#a10023"
        android:textSize="22dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_above="@+id/chooseLevelButton"
        android:layout_alignLeft="@+id/chooseLevelButton"
        android:layout_alignStart="@+id/chooseLevelButton"
        android:layout_marginBottom="17dp" />

    <Button
        android:id="@+id/chooseLevelButton"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:text="LEVELS"
        android:textColor="#ffffff"
        android:background="#a10023"
        android:textSize="22dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_above="@+id/gameOptionsButton"
        android:layout_alignLeft="@+id/gameOptionsButton"
        android:layout_alignStart="@+id/gameOptionsButton"
        android:layout_marginBottom="17dp" />

    <Button
        android:id="@+id/gameOptionsButton"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:text="OPTIONS"
        android:textColor="#ffffff"
        android:background="#a10023"
        android:textSize="22dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_above="@+id/aboutButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:text="ABOUT"
        android:id="@+id/aboutButton"
        android:textColor="#ffffff"
        android:background="#a10023"
        android:textSize="22dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

</RelativeLayout>