<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_splash_screen"
    android:orientation="vertical" >

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:layout_below="@+id/chooseLevelButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/chooseLevelButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LEVELS"
        android:layout_marginTop="212dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/gameOptionsButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="OPTIONS"
        android:layout_below="@+id/newGameButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:id="@+id/aboutButton"
        android:layout_below="@+id/gameOptionsButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>